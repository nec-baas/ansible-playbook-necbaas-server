#baas_server_api_base_uri: 'http://localhost:8080/api/'

# APIサーバ 内部向けベースURI 設定 （省略時は baas_server_api_base_uri の値が使用される）
#baas_server_api_internal_base_uri: ''

# 接続MongoDBサーバ。デフォルトは 'localhost:27017'。レプリカセット時はカンマ区切りで３台。
